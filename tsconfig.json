{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ESNext",
        "declaration": true,
        "outDir": "./lib",
        "lib": ["ESNext"],
        "baseUrl": "./src",
        "rootDir": "./src",
        "strict": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./src/**/*"]
}
